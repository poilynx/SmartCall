<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_item_height"
    android:background="@drawable/alpha_btn_background">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/contact_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        app:riv_border_color="@color/gray_light"
        app:riv_border_width="1dp"
        app:riv_corner_radius="5dp" />

    <TextView
        android:id="@+id/contact_userName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/contact_avatar"
        android:textColor="@color/black_light"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/contact_job"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/contact_userName"
        android:layout_toRightOf="@id/contact_avatar"
        android:gravity="center_vertical" />

    <View
        style="@style/vertical_split_view"
        android:layout_alignParentBottom="true"></View>
</RelativeLayout>